// PLANTILLA SOBERANA DEFINITIVA: [biblioteca]/tsconfig.lib.json
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "types": ["node"],
    "jsx": "react-jsx" // <-- Habilitar JSX
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"], // <-- Incluir .tsx
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.tsx"
  ]
}
