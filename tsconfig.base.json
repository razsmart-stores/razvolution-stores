// RUTA: tsconfig.base.json
{
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "composite": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "lib": ["es2022", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    // --- [CORRECCIÓN SOBERANA #1: LA ÚNICA FUENTE DE VERDAD PARA ALIAS] ---
    // Esta sección es la SSoT para todos los alias de importación del monorepo.
    // Garantiza que TypeScript, Jest y el editor de código hablen el mismo idioma.
    "paths": {
      "@razvolution/apps-store": ["apps/store/src/index.ts"],
      "@razvolution/features-ai-chat": ["features/ai-chat/src/index.ts"],
      "@razvolution/features-auth": ["features/auth/src/index.ts"],
      "@razvolution/features-cart": ["features/cart/src/index.ts"],
      "@razvolution/features-checkout": ["features/checkout/src/index.ts"],
      "@razvolution/features-community": ["features/community/src/index.ts"],
      "@razvolution/features-marketing": ["features/marketing/src/index.ts"],
      "@razvolution/features-product": ["features/product/src/index.ts"],
      "@razvolution/features-rewards": ["features/rewards/src/index.ts"],
      "@razvolution/features-workspace": ["features/workspace/src/index.ts"],
      "@razvolution/shared-ai-contracts": ["shared/ai-contracts/src/index.ts"],
      "@razvolution/shared-auth-contracts": [
        "shared/auth-contracts/src/index.ts"
      ],
      "@razvolution/shared-commerce-contracts": [
        "shared/commerce-contracts/src/index.ts"
      ],
      "@razvolution/shared-config": ["shared/config/src/index.ts"],
      "@razvolution/shared-content-contracts": [
        "shared/content-contracts/src/index.ts"
      ],
      "@razvolution/shared-data-access": ["shared/data-access/src/index.ts"],
      "@razvolution/shared-db-types": ["shared/db-types/src/index.ts"],
      "@razvolution/shared-i18n-contracts": [
        "shared/i18n-contracts/src/index.ts"
      ],
      "@razvolution/shared-logging": ["shared/logging/src/index.ts"],
      "@razvolution/shared-payments": ["shared/payments/src/index.ts"],
      "@razvolution/shared-rewards-contracts": [
        "shared/rewards-contracts/src/index.ts"
      ],
      "@razvolution/shared-shipping": ["shared/shipping/src/index.ts"],
      "@razvolution/shared-shopify": ["shared/shopify/src/index.ts"],
      "@razvolution/shared-supabase": ["shared/supabase/src/index.ts"],
      "@razvolution/shared-test-utils": ["shared/test-utils/src/index.ts"],
      "@razvolution/shared-ui": ["shared/ui/src/index.ts"],
      "@razvolution/shared-utils": ["shared/utils/src/index.ts"],
      "@razvolution/tools": ["tools/src/index.ts"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": ["node_modules", "tmp", "dist"]
}
